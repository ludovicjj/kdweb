{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <main class="container mt-3">
        <h1 class="text-center">Mot de passe oublié</h1>

        {{ form_start(forgotPasswordForm) }}
        <div class="row mt-3">
            <div class="col-md-6">
                    {{ form_row(forgotPasswordForm.email.first) }}
            </div>
            <div class="col-md-6">
                    {{ form_row(forgotPasswordForm.email.second) }}
            </div>
        </div>
        <div class="mt-5">
            <button
                    type="submit"
                    class="btn btn-primary d-block mx-auto"
                    title="Saisissez deux fois votre adresse e-mail pour recevoir un lien de réinitialisation"
            >
                Valider
            </button>
        </div>
        {{ form_end(forgotPasswordForm) }}
    </main>
{% endblock %}